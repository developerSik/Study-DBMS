CREATE SEQUENCE SEQ_INQUIRE;

CREATE TABLE INQUIRE_BOARD (
    INQUIRE_ID NUMBER CONSTRAINT PK_INQUIRE PRIMARY KEY,
    INQUIRE_TYPE VARCHAR2(1000) NOT NULL,
    INQUIRE_TITLE VARCHAR2(1000) NOT NULL,
    INQUIRE_CONTENT VARCHAR2(1000),
    INQUIRE_DATE DATE DEFAULT SYSDATE,
    INQUIRE_UPDATE DATE DEFAULT SYSDATE,
    USER_ID NUMBER NOT NULL,
    CONSTRAINT FK_INQUIRE_USERS FOREIGN KEY (USER_ID)
    REFERENCES USERS (USER_ID) ON DELETE CASCADE
);